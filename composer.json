    "keywords": ["controller", "view"],
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Harvey",
            "email": "chris@chrisnharvey.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "encorephp/container": "dev-master",
        "encorephp/resource": "dev-master",
        "symfony/yaml": "2.6.*"
    },
    "require-dev": {
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "4.3.*"
    },
    "autoload": {
        "psr-4": {
            "Encore\\Controller\\": "src/Controller/",
            "Encore\\View\\": "src/View/"
        }
    },
    "minimum-stability": "dev"
}
